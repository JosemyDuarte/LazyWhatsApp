---
interface Props {
	id?: string;
	variant?: 'primary' | 'secondary' | 'ghost' | 'ai';
	class?: string;
	type?: 'button' | 'submit';
	onclick?: string;
}

const { id, variant = 'primary', class: className, type = 'button', onclick } = Astro.props;
---

const variants = {
	primary: 'bg-primary text-white shadow-[0_4px_14px_rgba(56,189,248,0.4)] hover:bg-primary-hover hover:-translate-y-0.5 hover:shadow-[0_6px_20px_rgba(56,189,248,0.5)]',
	secondary: 'bg-white/5 text-text-muted border-white/10 hover:bg-white/10 hover:text-text',
	ghost: 'bg-transparent text-text border-white/20 hover:bg-white/5 hover:border-white',
	ai: 'bg-gradient-to-br from-primary to-accent text-white border-none shadow-[0_4px_15px_rgba(99,102,241,0.3)] hover:-translate-y-0.5 hover:shadow-[0_6px_20px_rgba(99,102,241,0.4)]'
};

const baseClass = 'inline-flex items-center justify-center gap-2 px-6 py-3 rounded-md font-semibold text-[0.95rem] cursor-pointer transition-all duration-200 ease-bounce border border-transparent active:scale-[0.98]';
---

<button id={id} type={type} class={`${baseClass} ${variants[variant]} ${className || ''}`} onclick={onclick}>
	<slot />
</button>
